<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context="com.tyustwys.logindemo.ui.CheckActivity">
    <TextView
        android:id="@+id/info_check"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <RadioGroup
        android:id="@+id/rgp_user_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rb_all_user_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部"/>
        <RadioButton
            android:id="@+id/rb_1_user_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lasohi"/>
        <RadioButton
            android:id="@+id/rb_2_user_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="teacher"/>
    </RadioGroup>
    <RadioGroup
        android:id="@+id/rgp_loc_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rb_all_loc_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部"/>
        <RadioButton
            android:id="@+id/rb_1_loc_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地球"/>
        <RadioButton
            android:id="@+id/rb_2_loc_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="火星"/>
    </RadioGroup>
    <Button
        android:id="@+id/btn_query_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查询"/>

</LinearLayout>
